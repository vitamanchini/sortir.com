{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/admin/admin-page.css') }}">
{% endblock %}

{% block main %}
<div>
    <h1>Admin functions:</h1>

    <ul id="admin-functions">
        <li><a href="{{ path ('admin_create-user') }}">Inscrire un utilisateur manuellement</a></li>
        <li><a href="{{ path ('admin_create-users-csv') }}">Inscrire des utilisateurs par intégration d'un fichier</a></li>
        <li>Désactiver des utilisateurs</li>
        <li>Supprimer des utilisateurs</li>
        <li>Annuler une sortie en tant qu'administrateur</li>
    </ul>
</div>

    <h1>Participant index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Password</th>
            <th>Name</th>
            <th>SecondName</th>
            <th>Telephone</th>
            <th>Active</th>
            <th>Pseudo</th>
            <th>ProfileImage</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.id }}</td>
                <td>{{ participant.email }}</td>
                <td>{{ participant.roles ? participant.roles|json_encode : '' }}</td>
                <td>{{ participant.password }}</td>
                <td>{{ participant.name }}</td>
                <td>{{ participant.secondName }}</td>
                <td>{{ participant.telephone }}</td>
                <td>{{ participant.active ? 'Yes' : 'No' }}</td>
                <td>{{ participant.pseudo }}</td>
                <td>{{ participant.profileImage }}</td>
                <td>
{#                    <a href="{{ path('admin_show', {'id': participant.id}) }}">show</a>#}
                    <a href="{{ path('admin_edit', {'id': participant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_create-user') }}">Create new</a>
{% endblock %}
